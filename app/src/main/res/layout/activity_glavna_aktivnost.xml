<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ba.sve_mo.fpmoz.zeljko.kalkulator.GlavnaAktivnost">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/result_txt" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/btn_1"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/btn_5"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/btn_2"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/btn_3"
                android:layout_row="0"
                android:layout_column="2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/btn_4"
                android:layout_row="0"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/btn_9"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/btn_6"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/btn_7"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/btn_8"
                android:layout_row="1"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btn_pl"
                android:layout_row="3"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/btn_0"
                android:layout_row="2"
                android:layout_column="1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/btn_eq"
                android:layout_row="2"
                android:layout_column="2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/btn_ce"
                android:layout_row="2"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/btn_zarez"
                android:layout_row="4"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btn_mi"
                android:layout_row="3"
                android:layout_column="1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/btn_mul"
                android:layout_row="3"
                android:layout_column="2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btn_div"
                android:layout_row="3"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="^2"
                android:id="@+id/btn_kvad"
                android:layout_row="4"
                android:layout_column="1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="^"
                android:id="@+id/btn_pot"
                android:layout_row="4"
                android:layout_column="2" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
